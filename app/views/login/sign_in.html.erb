<% content_for :title do %>Вход<% end %>

<% if @error %>
  <div class="message error"><%= @error %></div>
<% end %>

<%= form_tag '/perform_sign_in' do %>
  <div class="mt-8">
    <%= label_tag 'login', 'Логин' %>
    <%= text_field_tag 'login', '', placeholder: 'Например, ivanov' %>
  </div>

  <div class="mt-5">
    <%= label_tag 'password', 'Пароль' %>
    <%= password_field_tag 'password', '', placeholder: '**********' %>
  </div>

  <div class="mt-8">
    <%= submit_tag 'Войти', data: { disable_with: 'Подождите...' } %>
  </div>
<% end %>