<header>
  <div class='header space-x'>
    <a href='/' class='header__logo space-x'>
      <%= image_tag 'book_lover', alt: 'Логотип' %>
      <p>Book Store</p>
    </a>

    <nav>
      <%= link_to 'Книги', books_path, class: 'link' %>
    </nav>

    <nav class='navigation space-x'>
      <% if @current_user %>
        <div class='row user_info'>
          <div class='icon user_icon'></div>
          <span><%= @current_user %></span>
        </div>

        <%= link_to sign_out_path, method: :post, class: 'link', title: 'Выйти' do %>
          <div class='icon sign_out_icon'></div>
        <% end %>
      <% else %>
        <%= link_to 'Вход', sign_in_path, class: 'link' %>
        <%= link_to 'Регистрация', sign_up_path, class: 'link' %>
      <% end %>
    </nav>
  </div>
</header>
